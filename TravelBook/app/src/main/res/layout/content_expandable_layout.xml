<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/sort_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/sort_by_margin_start"
        android:layout_marginTop="@dimen/sort_by_margin_top"
        android:text="@string/text_sort_by"
        android:textColor="@color/sort_by_text_color"
        android:textSize="@dimen/sort_by_text_size"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/buttons_layout_height"
        android:layout_marginTop="@dimen/buttons_layout_margin_top"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/sort_by">

        <Button
            android:id="@+id/friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_friend"
            android:background="@drawable/friend_button"
            android:text="@string/text_fiend"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/community"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_community"
            android:background="@drawable/friend_button"
            android:text="@string/text_community"
            app:layout_constraintEnd_toEndOf="parent" />
    </android.support.constraint.ConstraintLayout>

</LinearLayout>
